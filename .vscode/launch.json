    "version": "0.2.0",
    "configurations": [
        {
            "name": "No args",
            "type": "debugpy",
            "request": "launch",
            "program": "${cwd}/kvm/__main__.py",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "Input command",
            "type": "debugpy",
            "request": "launch",
            "program": "${cwd}/kvm/__main__.py",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Latest",
            "type": "debugpy",
            "request": "launch",
            "program": "${cwd}/kvm/__main__.py",
            "console": "integratedTerminal",
            "args": [ "latest" ]
        }
    ]
}