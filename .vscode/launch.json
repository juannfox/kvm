{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "No args",
            "type": "debugpy",
            "request": "launch",
            "program": "kvm",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "args": []
        },
        {
            "name": "Input command",
            "type": "debugpy",
            "request": "launch",
            "program": "kvm",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Latest",
            "type": "debugpy",
            "request": "launch",
            "program": "kvm",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "args": [ "latest" ]
        },
        {
            "name": "Download latest",
            "type": "debugpy",
            "request": "launch",
            "program": "kvm",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "args": [ "download" ]
        },
        {
            "name": "Download specific version",
            "type": "debugpy",
            "request": "launch",
            "program": "kvm",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "args": [
                "download",
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Install latest",
            "type": "debugpy",
            "request": "launch",
            "program": "kvm",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "args": [ "install" ]
        },
    ]
}